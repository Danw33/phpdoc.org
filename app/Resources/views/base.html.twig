            <li><a href="{{ url('template_list') }}"><img src="{{ asset('bundles/phpdocumentorstyle/images/thumbnails/old_ocean.png') }}" alt="old_ocean template" /></a></li>
            <li><a href="{{ url('template_list') }}"><img src="{{ asset('bundles/phpdocumentorstyle/images/thumbnails/zend.png') }}" alt="zend template" /></a></li>
        </ul>
    </section>

    <footer>
        <section class="container">
            <section class="row">
                <section class="span8 showcases">
                    <h1>Used by</h1>
                    <div class="row">
                        <div class="span2" >
                            <div class="showcase">
                                <img src="{{ asset('bundles/phpdocumentorwebsite/images/usecases/zf.png') }}" alt="Zend Framework" />
                            </div>
                        </div>
                        <div class="span2" >
                            <div class="showcase">
                                <img src="{{ asset('bundles/phpdocumentorwebsite/images/usecases/googleappengine.jpg') }}" alt="Aura"/>
