<!DOCTYPE HTML>
<html lang="en-US" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <title>phpDocumentor</title>
    <link href="{{ asset('bundles/phpdocumentorwebsite/css/style.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/phpdocumentorwebsite/css/elastislide.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/phpdocumentorwebsite/css/prism.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/phpdocumentorwebsite/images/favicon.ico') }}" rel="shortcut icon" type="image/x-icon" />
</head>
<body>

    <header>
        <nav>
            <h1>
                <img id="logo" src="{{ asset('bundles/phpdocumentorwebsite/images/logo-icon.png') }}" alt="Logo" />
                phpDocumentor
            </h1>

            {{ knp_menu_render('phpDocumentorWebsiteBundle:Builder:mainMenu') }}

            <ul class="nav nav-pills">
                <li><a href="http://github.com/phpDocumentor/phpDocumentor2" title="Github &middot; Fork me"><i class="icon-github-alt"></i></a></li>
                <li><a href="http://twitter.com/phpdocumentor" title="Twitter &middot; @phpDocumentor"><i class="icon-twitter"></i></a></li>
                <li><a href="contact" title="IRC &middot; #phpdocumentor at Freenode"><i class="icon-comments"></i></a></li>
            </ul>
        </nav>
        <nav class="submenu {% if not block('submenu') %}hidden{% endif %}">
            <ul class="nav nav-pills">
                {% block submenu %}{% endblock %}
            </ul>
        </nav>
    </header>

    <section class="container">
        {% block body %}{% endblock %}
    </section>

    <section class="styles-preview">
        <h1>Styles</h1>

        <ul id="carousel" class="elastislide-list">
            <li><a href="#"><img src="{{ asset('bundles/phpdocumentortemplate/images/thumbnails/abstract.png') }}" alt="image01" /></a></li>
            <li><a href="#"><img src="{{ asset('bundles/phpdocumentortemplate/images/thumbnails/new-black.png') }}" alt="image01" /></a></li>
            <li><a href="#"><img src="{{ asset('bundles/phpdocumentortemplate/images/thumbnails/old_ocean.png') }}" alt="image01" /></a></li>
            <li><a href="#"><img src="{{ asset('bundles/phpdocumentortemplate/images/thumbnails/responsive.png') }}" alt="image01" /></a></li>
            <li><a href="#"><img src="{{ asset('bundles/phpdocumentortemplate/images/thumbnails/zend.png') }}" alt="image01" /></a></li>
            <li><a href="#"><img src="{{ asset('bundles/phpdocumentortemplate/images/thumbnails/checkstyle.png') }}" alt="image01" /></a></li>
        </ul>
    </section>

    <footer>
        <section class="container">
            <section class="row">
                <section class="span8 showcases">
                    <h1>Used by</h1>
                    <div class="row">
                        <div class="span2" >
                            <div class="showcase">
                                <img src="{{ asset('bundles/phpdocumentorwebsite/images/logos/zf.png') }}" alt="Zend Framework" />
                            </div>
                        </div>
                        <div class="span2" >
                            <div class="showcase">
                                <img src="{{ asset('bundles/phpdocumentorwebsite/images/logos/agavi.png') }}" alt="Agavi"/>
                            </div>
                        </div>
                        <div class="span2" >
                            <div class="showcase">
                                <img src="{{ asset('bundles/phpdocumentorwebsite/images/logos/aura.png') }}" alt="Aura"/>
                            </div>
                        </div>
                        <div class="span2" >
                            <div class="showcase">
                                <img src="{{ asset('bundles/phpdocumentorwebsite/images/logos/ezpublish.gif') }}" alt="ezPublish"/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="span2" >
                            <div class="showcase">
                                <img src="{{ asset('bundles/phpdocumentorwebsite/images/logos/modx.png') }}" alt="ModX"/>
                            </div>
                        </div>
                        <div class="span2" >
                            <div class="showcase">
                                <img src="{{ asset('bundles/phpdocumentorwebsite/images/logos/phing.gif') }}" alt="ezPublish"/>
                            </div>
                        </div>
                        <div class="span2" >
                            <div class="showcase">
                                <img src="{{ asset('bundles/phpdocumentorwebsite/images/logos/propel.png') }}" alt="ModX"/>
                            </div>
                        </div>
                        <div class="span2" >
                            <div class="showcase">
                                <img src="{{ asset('bundles/phpdocumentorwebsite/images/logos/pyrocms.png') }}" alt="PyroCMS"/>
                            </div>
                        </div>
                    </div>
                    <span class="more pull-right"><a href="{{ path('showcases') }}">And more &hellip;</a></span>
    {#
                    <div class="row">
                        <img class="span4" src="{{ asset('bundles/phpdocumentorwebsite/images/logos/Sugar-LOGO-2012.png') }}" alt="SugarCRM"/>
                    </div>
    #}
                </section>
                <section class="span1">
                    <div class='separator'></div>
                </section>
                <section class="span3 sponsors">
                    <h1>Sponsors</h1>
                    <figure class="row-fluid">
                        <img class="span3" src="{{ asset('bundles/phpdocumentorwebsite/images/logos/ingewikkeld.png') }}" alt="Ingewikkeld Logo"/>
                        <figcaption class="span9">
                            <a href="http://php.ingewikkeld.net">Ingewikkeld</a> sponsors
                            <a href="http://twitter.com/mvriel">@mvriel</a> to contribute for 8hrs/week
                        </figcaption>
                    </figure>
                    <figure class="row-fluid">
                        <img class="span3" src="{{ asset('bundles/phpdocumentorwebsite/images/phpstorm.png') }}" alt="phpStorm Logo"/>
                        <figcaption class="span9">
                            <a href="http://www.jetbrains.com">Jetbrains</a> sponsors phpDocumentor with licenses for
                            <a href="http://www.jetbrains.com/phpstorm">phpStorm</a>
                        </figcaption>
                    </figure>
                </section>
            </section>
        </section>
    </footer>

    <!--[if lt IE 9]>
