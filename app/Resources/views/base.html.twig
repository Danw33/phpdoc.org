    <script>
        $('.content-overview nav a').click(function (e) {
            e.preventDefault();
            $(this).parent().children('a').removeClass('active');
            $(this).addClass('active').tab('show');
        })
        $('#carousel').elastislide({ minItems : 2 });
        $('.accordion').collapse();
    </script>
</body>
</html>
